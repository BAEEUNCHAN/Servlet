<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mapper.StudentMapper"> <!--클래스 -->

	<select id="studentList" resultType="Student"> <!-- id 메소드이름 resultType이 반환되는 타입 -->
		select * from tbl_student order by std_no
	</select>

	<select id="selectOne" parameterType="string" resultType="student">
		select *
		from tbl_student
		where std_no = #{sno}
	</select>

	<insert id="insetStudent" parameterType="Student">
		insert into tbl_student (std_no,std_name,std_phone,birth_date)
		values(#{stdNo},#{stdName},#{stdPhone},#{birthDate})
	</insert>


	<insert id="updateStudent" parameterType="Student">
		update tbl_student
		set std_phone = #{stdPhone}
		where std_No = 'S2024-08'
	</insert>

	<delete id="deleteStudent" parameterType="string">
		delete from tbl_student
		where std_no = #{stdNo}
	</delete>
</mapper>